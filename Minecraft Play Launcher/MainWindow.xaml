<Window x:Class="Minecarft_Play_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="Minecraft Play Launcher" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Center" Height="450" VerticalAlignment="Center" Width="800">
            <TabItem Header="启动" Margin="0,0,0,0" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left">
                <Grid Name="StartGrid">
                    <Grid.Background>
                        <ImageBrush ImageSource="/2023050447m92i.webp" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <Button x:Name="Start" Content="启动游戏" Height="50" VerticalAlignment="Bottom" Width="100" HorizontalAlignment="Right" Margin="0,0,30,30" FontWeight="Bold" FontSize="20" Click="StartClick"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="游戏版本:" VerticalAlignment="Top" Width="90" Height="30" Margin="0,20,0,0" FontWeight="Bold" FontSize="20"/>
                    <ComboBox x:Name="versionCombo" DisplayMemberPath="Id" HorizontalAlignment="Left" Height="30" Margin="90,20,0,0" VerticalAlignment="Top" Width="200"/>

                </Grid>
            </TabItem>

            <TabItem Header="登录" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid Name = "LoginGrid">
                    <Grid.Background>
                        <ImageBrush ImageSource="/2023050447m92i.webp" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <TextBlock HorizontalAlignment="Left" Margin="0,30,0,0" TextWrapping="Wrap" Text="离线登录：" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
                    <TextBox x:Name="IdBox" HorizontalAlignment="Left" Height="30" Margin="100,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontSize="20" FontWeight="Bold"/>
                </Grid>
            </TabItem>

            <TabItem  Header="下载" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid>
                    <Grid.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource="/2023050447m92i.webp"/>
                    </Grid.Background>

                    <DataGrid AutoGenerateColumns="True" x:Name="MCVersionDataGrid">
                        <DataGrid.Background>
                            <ImageBrush/>
                        </DataGrid.Background>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="设置" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid Name = "SettingGrid">
                    <Grid.Background>
                        <ImageBrush ImageSource="/2023050447m92i.webp" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <TextBlock HorizontalAlignment="Left" Margin="0,30,0,0" TextWrapping="Wrap" Text="运行内存：" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
                    <TextBox x:Name="MemoryTextBox" HorizontalAlignment="Left" Height="30" Margin="100,30,0,0" TextWrapping="Wrap" Text="1024" VerticalAlignment="Top" Width="150" FontSize="20" FontWeight="Bold"/>

                    <Button x:Name="javaCombo" Content="点击选择Java" HorizontalAlignment="Left" Margin="0,60,0,0"   VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Width="150" Height="30" Click="javaCombo_Click_1"/>
                    <TextBlock x:Name="filePath" HorizontalAlignment="Left" Height="60" Margin="5,90,0,0" VerticalAlignment="Top" Width="800"/>
                  
                    <TextBlock HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="背景图片" VerticalAlignment="Top" Width="200" Margin="0,160,0,0" FontSize="24" FontWeight="Bold"/>
                    <TextBlock x:Name="lujing" HorizontalAlignment="Left"  Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="800" Margin="0,190,0,0" FontSize="24">
                        <TextBlock.Background>
                            <ImageBrush/>
                        </TextBlock.Background>
                    </TextBlock>

                    <Button x:Name="moren" Content="默认" Width="96" Height="30" Margin="5,225,693,142" Click="SwitchDefaultBackground"></Button>
                    <Button x:Name="zidingyi" Content="自定义" Width="96" Height="30" Margin="139,225,559,142" Click="SwitchBackground"></Button>
                    
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
